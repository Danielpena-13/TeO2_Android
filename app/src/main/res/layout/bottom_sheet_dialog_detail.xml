<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_bottom_sheet"
    android:background="@drawable/rounded_detail" >

    <ImageView
        android:id="@+id/img_campesino_sheet_dialog"
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher_round"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/tx_nombrePredio_sheet_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:gravity="left"
            android:text="Nombre del Predio"
            android:textColor="@color/colorBlack"
            android:textSize="27dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:text="@string/LoremIpsum"
            android:textStyle="italic"
            android:layout_below="@id/tx_nombrePredio_sheet_dialog"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:ellipsize="end"
            android:scrollHorizontally="false" />

    </RelativeLayout>

</LinearLayout>